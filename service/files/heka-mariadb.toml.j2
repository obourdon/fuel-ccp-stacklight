[mariadb_log_decoder]
type = "SandboxDecoder"
filename = "lua_decoders/os_mysql_log.lua"

[mariadb_logstreamer_input]
type = "LogstreamerInput"
decoder = "mariadb_log_decoder"
log_directory = "/var/log/ccp/mysql"
file_match = 'mysql\.log\.?(?P<Seq>\d*)$'
priority = ["^Seq"]
differentiator = ['mysql']
